<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:padding="@dimen/margin_micro"
    android:background="@android:color/white">

    <TableRow>
        <TextView
            android:layout_width="1dp"
            android:id="@+id/tv_arrester_state_name"
            android:padding="@dimen/margin_micro"
            android:layout_span="2"
            android:gravity="center"
            android:textSize="@dimen/text_size_dialog_filter_label"
            android:textColor="@android:color/white"
            android:background="@android:color/black"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="1dp"
            android:text="@string/environment_temperature_label"
            android:padding="@dimen/margin_tiny_fixed"
            android:gravity="center"
            android:textSize="@dimen/text_size_toast_prompt"/>
        <TextView
            android:layout_width="1dp"
            android:id="@+id/tv_environment_temperature_value"
            android:padding="@dimen/margin_tiny_fixed"
            android:gravity="center"
            android:textSize="@dimen/text_size_toast_prompt"/>
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="1dp"
            android:text="@string/environment_humidity_label"
            android:padding="@dimen/margin_tiny_fixed"
            android:gravity="center"
            android:textSize="@dimen/text_size_toast_prompt"/>
        <TextView
            android:layout_width="1dp"
            android:id="@+id/tv_environment_humidity_value"
            android:padding="@dimen/margin_tiny_fixed"
            android:gravity="center"
            android:textSize="@dimen/text_size_toast_prompt"/>
    </TableRow>

</TableLayout>